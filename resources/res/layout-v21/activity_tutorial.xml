    </RelativeLayout>
    <android.support.v4.view.ViewPager android:id="@+id/pager_tutorial" android:background="@drawable/tutorial_background" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/lyt_tutorial_controls" android:layout_alignParentTop="true" android:elevation="0dp"/>
</RelativeLayout>
