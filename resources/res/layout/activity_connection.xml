<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="@color/background" android:layout_width="match_parent" android:layout_height="match_parent">
        <FrameLayout android:orientation="horizontal" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize" android:minHeight="?attr/actionBarSize">
            <ImageView android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_logo_nautilus"/>
            <TextView android:textSize="@dimen/connection_skip_button_text_size" android:textColor="@color/connection_skip_color_button" android:gravity="center" android:layout_gravity="bottom|right|center_vertical|center_horizontal|center" android:id="@+id/text_view_skip" android:clickable="true" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="@dimen/connection_skip_button_margin_right" android:text="@string/connection_skip_text_view" android:onClick="skipToHomeScreen" style="@style/TextLight"/>
        </FrameLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:weightSum="6">
            <LinearLayout android:orientation="vertical" android:id="@+id/connection_header_container" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginBottom="@dimen/connection_header_margin_bottom" android:layout_weight="1.6">
                <TextView android:textSize="@dimen/connection_header_text_size" android:textColor="@color/white" android:gravity="center_horizontal" android:id="@+id/connection_header_title1" android:paddingTop="@dimen/connection_header_text_padding_top" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/connection_header_text_margin_left" android:layout_marginRight="@dimen/connection_header_text_margin_right" android:text="@string/connection_connect_with_your" style="@style/TextLight"/>
                <TextView android:textSize="@dimen/connection_header_text_size" android:textColor="@color/white" android:gravity="center_horizontal" android:id="@+id/connection_header_title2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/connection_header_text_margin_left" android:layout_marginRight="@dimen/connection_header_text_margin_right" android:text="@string/connection_nautilus" style="@style/TextLight"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginLeft="@dimen/connection_item_margin_left" android:layout_marginRight="@dimen/connection_item_margin_right" android:layout_marginBottom="@dimen/connection_item_margin_bottom" android:layout_weight="1.2">
                <ImageView android:layout_gravity="center_vertical" android:layout_width="@dimen/connection_item_icon_width" android:layout_height="@dimen/connection_item_icon_height" android:layout_marginRight="@dimen/connection_item_icon_margin_right" android:src="@drawable/ic_plug"/>
                <TextView android:textSize="@dimen/connection_item_text_size" android:textColor="@color/white" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/connection_is_omni_trainer_plugged" style="@style/TextLight"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginLeft="@dimen/connection_item_margin_left" android:layout_marginRight="@dimen/connection_item_margin_right" android:layout_marginBottom="@dimen/connection_item_margin_bottom" android:layout_weight="1.2">
                <ImageView android:layout_gravity="center_vertical" android:layout_width="@dimen/connection_item_icon_width" android:layout_height="@dimen/connection_item_icon_height" android:layout_marginRight="@dimen/connection_item_icon_margin_right" android:src="@drawable/ic_distance"/>
                <TextView android:textSize="@dimen/connection_item_text_size" android:textColor="@color/white" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/connection_be_near_your_omni_trainer" style="@style/TextLight"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginLeft="@dimen/connection_item_margin_left" android:layout_marginRight="@dimen/connection_item_margin_right" android:layout_marginBottom="@dimen/connection_item_margin_bottom" android:layout_weight="1.2">
                <ImageView android:layout_gravity="center_vertical" android:layout_width="@dimen/connection_item_icon_width" android:layout_height="@dimen/connection_item_icon_height" android:layout_marginRight="@dimen/connection_item_icon_margin_right" android:src="@drawable/ic_no_one_using"/>
                <TextView android:textSize="@dimen/connection_item_text_size" android:textColor="@color/white" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/connection_make_sure_no_one_is_using_omni_trainer" style="@style/TextLight"/>
            </LinearLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginTop="@dimen/connection_button_margin_top" android:layout_weight="0.8">
                <RelativeLayout android:id="@+id/connect_now_button_container" android:background="@color/blue_nautilus" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent" android:onClick="connectToOmniTrainer">
                    <TextView android:textSize="@dimen/connection_button_text_size" android:textColor="@color/white" android:id="@+id/text_view_connect" android:background="@color/transparent" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/connection_btn_connect_now" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:onClick="connectToOmniTrainer" android:textAllCaps="false" style="@style/LatoLightBorderlessButtonStyle"/>
                </RelativeLayout>
                <ProgressBar android:id="@+id/progress_bar_connect_now" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="@dimen/connection_progress_bar_margin" android:layout_marginBottom="@dimen/connection_progress_bar_margin" android:layout_alignParentTop="true"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/custom_animated_toast"/>
</FrameLayout>
