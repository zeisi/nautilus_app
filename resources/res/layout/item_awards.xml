<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <ImageView android:id="@+id/image_view_award_circle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_orange_circle" android:layout_centerInParent="true"/>
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <ImageView android:id="@+id/image_view_award_type_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/awards_icon_margin_bottom" android:src="@drawable/ic_sticker_calories"/>
        <TextView android:textSize="@dimen/awards_description_text_size" android:textColor="@color/white" android:id="@+id/text_view_award_value" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="32 Cal Avg" style="@style/TextBold"/>
        <TextView android:textSize="@dimen/awards_description_text_size" android:textColor="@color/award_date_color" android:id="@+id/text_view_header_award_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="JUL 12" android:textAllCaps="true" style="@style/TextLight"/>
    </LinearLayout>
</RelativeLayout>
