<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="horizontal" android:background="@color/bb_topBar" android:layout_width="match_parent" android:layout_height="45dp">
            <ImageButton android:id="@+id/bb_back_button" android:background="@color/bb_transparent" android:paddingLeft="5dp" android:paddingTop="11dp" android:paddingRight="0dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="-5dp" android:src="@drawable/bb_back_button" android:scaleType="centerInside" android:tint="@color/bb_black" android:layout_weight="0.05"/>
            <TextView android:textSize="17sp" android:textColor="@color/bb_white" android:gravity="center_vertical" android:background="@color/bb_topBar" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/bb_build_info" android:layout_weight="1"/>
        </LinearLayout>
        <View android:background="#22000000" android:layout_width="match_parent" android:layout_height="3dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="0dp" android:layout_marginTop="50dp" android:layout_marginRight="0dp" android:weightSum="1">
        <LinearLayout android:gravity="fill_horizontal" android:orientation="horizontal" android:background="#0e000000" android:paddingBottom="1dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="1" android:layout_weight="0.065">
            <TextView android:textColor="#c8000000" android:gravity="center_vertical" android:layout_gravity="center" android:background="#ffffff" android:paddingLeft="16dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/bb_build_number" android:layout_weight="0.4"/>
            <TextView android:textColor="#85000000" android:gravity="right|center_vertical|center_horizontal|center" android:layout_gravity="center" android:id="@+id/bb_build_number" android:background="#ffffff" android:paddingLeft="3dp" android:paddingTop="3dp" android:paddingRight="16dp" android:paddingBottom="3dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_weight="0.6"/>
        </LinearLayout>
        <LinearLayout android:gravity="fill_horizontal" android:orientation="horizontal" android:background="#0e000000" android:paddingBottom="1dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="1" android:layout_weight="0.08">
            <TextView android:textColor="#c8000000" android:gravity="center_vertical" android:layout_gravity="center" android:background="#ffffff" android:paddingLeft="16dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/bb_version_name" android:layout_weight="0.4"/>
            <TextView android:textColor="#85000000" android:gravity="right|center_vertical|center_horizontal|center" android:layout_gravity="center" android:id="@+id/bb_version_name" android:background="#ffffff" android:paddingRight="16dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_weight="0.6"/>
        </LinearLayout>
        <LinearLayout android:gravity="fill_horizontal" android:orientation="horizontal" android:background="#0e000000" android:paddingBottom="1dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="1" android:layout_weight="0.08">
            <TextView android:textColor="#c8000000" android:gravity="center_vertical" android:layout_gravity="center" android:background="#ffffff" android:paddingLeft="16dp" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/bb_version_code" android:singleLine="false" android:layout_weight="0.4"/>
            <TextView android:textColor="#85000000" android:gravity="right|center_vertical|center_horizontal|center" android:layout_gravity="center" android:id="@+id/bb_version_code" android:background="#ffffff" android:paddingLeft="3dp" android:paddingRight="16dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.6"/>
        </LinearLayout>
        <LinearLayout android:gravity="fill_horizontal" android:orientation="horizontal" android:background="#0e000000" android:paddingBottom="1dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="1" android:layout_weight="0.065">
            <TextView android:textColor="#c8000000" android:gravity="center_vertical" android:layout_gravity="center" android:background="#ffffff" android:paddingLeft="16dp" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/bb_app_variant_name" android:layout_weight="0.4"/>
            <TextView android:textColor="#85000000" android:gravity="right|center_vertical|center_horizontal|center" android:layout_gravity="center" android:id="@+id/bb_app_variant" android:background="#ffffff" android:paddingLeft="3dp" android:paddingTop="3dp" android:paddingRight="16dp" android:paddingBottom="3dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.6"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
